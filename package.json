{
  "name": "junglegap-overlay",
  "version": "1.0.0",
  "description": "JungleGap.ai - League of Legends Real-Time Jungle Tracker Overlay",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "build": "react-scripts build",
    "dist": "npm run build && electron-builder",
    "electron": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "react-scripts start"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "dependencies": {
    "@vercel/analytics": "latest",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.561.0",
    "next": "16.0.10",
    "next-themes": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "tw-animate-css": "latest"
  },
  "devDependencies": {
    "@types/node": "25.0.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.junglegap.overlay",
    "productName": "JungleGap.ai",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "backend/dist/engine.exe",
        "to": "backend/engine.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/*",
      "public/electron.js"
    ]
  }
}